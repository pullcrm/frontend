{
  "extends": "@quasar/app-vite/tsconfig-preset.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "~/*": [
        "src/*"
      ],
      "src/*": [
        "src/*"
      ],
      "app/*": [
        "*"
      ],
      "ui/*": [
        "src/ui/*"
      ],
      "utils/*": [
        "src/utils/*"
      ],
      "constants/*": [
        "src/constants/*"
      ],
      "composables/*": [
        "src/composables/*"
      ],
      "validation/*": [
        "src/validation/*"
      ],
      "components/*": [
        "src/components/*"
      ],
      "layouts/*": [
        "src/layouts/*"
      ],
      "pages/*": [
        "src/pages/*"
      ],
      "assets/*": [
        "src/assets/*"
      ],
      "boot/*": [
        "src/boot/*"
      ],
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue"
  ]
}
