{
  "name": "pull-crm",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "node": ">=14.15.4",
    "yarn": ">=1.21"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{vue,js,ts}": "eslint --fix --ignore-path .gitignore --ignore-path .eslintignore",
    "*.{vue,scss,css}": "stylelint --fix"
  },
  "scripts": {
    "dev": "cross-env NODE_ENV=development nuxt",
    "debug": "cross-env NODE_ENV=development node --inspect node_modules/.bin/nuxt-ts",
    "start": "cross-env NODE_ENV=production nuxt start",
    "clean": "rm -rf .nuxt dist",
    "build": "yarn clean && cross-env NODE_ENV=production nuxt build",
    "server": "git pull --rebase origin && yarn install && yarn build",
    "build:widget": "tsc 'client/static/static/widgets/widget.esnext.js' --allowJs --target 'ES5' --outFile 'client/static/static/widgets/widget.compiled.js'",
    "lint:js": "eslint --ext .js,.ts,.vue --ignore-path .gitignore --ignore-path .eslintignore .",
    "lint:js:fix": "eslint --fix --ext .js,.ts,.vue --ignore-path .gitignore --ignore-path .eslintignore .",
    "lint:css": "stylelint 'client/**/*.{vue,scss,css}'",
    "lint:css:fix": "stylelint 'client/**/*.{vue,scss,css}' --fix",
    "lint": "yarn lint:js && yarn lint:css",
    "figma:prepare-icons": "node ./bin/prepare-icons.js"
  },
  "browserslist": [
    "> 1%",
    "IE >= 11",
    "safari > 5",
    "firefox > 30"
  ],
  "dependencies": {
    "@nuxt/types": "2.15.3",
    "@sentry/browser": "^6.8.0",
    "@sentry/integrations": "^6.8.0",
    "@sentry/node": "^6.8.0",
    "@types/requestidlecallback": "^0.3.1",
    "animated-scroll-to": "^2.0.10",
    "cookie": "0.4.0",
    "cross-env": "7.0.3",
    "nuxt": "2.15.3",
    "on-headers": "1.0.2",
    "prom-client": "11.5.2",
    "register-service-worker": "^1.7.1",
    "vue-slicksort": "^1.2.0"
  },
  "devDependencies": {
    "@babel/core": "7.13.10",
    "@babel/plugin-syntax-dynamic-import": "7.8.3",
    "@babel/plugin-transform-spread": "7.12.1",
    "@babel/polyfill": "7.12.1",
    "@babel/runtime-corejs3": "7.13.10",
    "@nuxt/babel-preset-app": "2.15.3",
    "@nuxt/typescript-build": "2.1.0",
    "@nuxtjs/router": "1.6.1",
    "@types/google.analytics": "0.0.41",
    "@types/lodash": "4.14.123",
    "@typescript-eslint/eslint-plugin": "4.19.0",
    "@typescript-eslint/parser": "4.19.0",
    "animated-scroll-to": "^2.0.10",
    "autoprefixer": "9.8",
    "browserslist": "4.12.0",
    "core-js": "3.9.1",
    "css-mqpacker": "7.0.0",
    "dayjs": "1.8.33",
    "element-matches-polyfill": "1.0.0",
    "eslint": "7.22.0",
    "eslint-config-standard": "16.0.2",
    "eslint-plugin-import": "2.22.1",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-promise": "4.3.1",
    "eslint-plugin-unicorn": "29.0.0",
    "eslint-plugin-vue": "7.8.0",
    "husky": "^4.2.5",
    "intersection-observer": "0.12.0",
    "isomorphic-base64": "1.0.2",
    "isomorphic-unfetch": "3.0.0",
    "jwt-decode": "^2.2.0",
    "lint-staged": "10.5.3",
    "node-sass": "4.14.1",
    "portal-vue": "^2.1.7",
    "postcss": "7.0.32",
    "raf": "3.4.1",
    "raw-loader": "4.0.1",
    "sass-loader": "10.1.1",
    "stylelint": "13.9.0",
    "stylelint-config-rational-order": "0.1.2",
    "stylelint-config-standard": "20.0.0",
    "stylelint-order": "4.1.0",
    "stylelint-prettier": "1.1.2",
    "stylelint-scss": "3.18.0",
    "svgo-loader": "2.2.1",
    "v-click-outside": "3.1.2",
    "vee-validate": "3.4.5",
    "vue-class-component": "7.2.6",
    "vue-observe-visibility": "0.4.6",
    "vue-property-decorator": "7.2.0",
    "vue-the-mask": "0.11.1"
  },
  "resolutions": {
    "postcss-custom-properties": "9.1.1"
  }
}
